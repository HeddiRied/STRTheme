{{#post}}
<div class="STRTagCard OLSKCommonCard">
	{{#if primary_tag.feature_image}}
		<img class="STRTagCardImage" src="{{ primary_tag.feature_image }}" aria-hidden="true" />
	{{/if}}
	
	<a class="STRTagCardLink" href="{{ primary_tag.url }}">More from {{ primary_tag.name }}</a>
</div>
{{/post}}

<style>
.STRTagCard {
	margin-top: var(--OLSKSectionSpacing);
}

.STRTagCardImage {
	border-radius: 10px;
}

.STRTagCardLink {
	text-decoration: none;
}
</style>
