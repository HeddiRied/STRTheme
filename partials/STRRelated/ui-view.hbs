{{#get "posts" limit="5" filter="tag:{{post.primary_tag.slug}}+id:-{{post.id}}" as |related|}}
<div class="STRRelated">

<h2 class="STRRelatedHeading">Related</h2>

<ul>
{{#foreach related}}
<li class="STRRelatedListItem">
	<a class="STRRelatedListItemLink" href="{{url}}">{{title}}</a>
</li>
{{/foreach}}
</ul>

</div>
{{/get}}
