<div class="STRPreviewList">

{{#foreach posts}}

<div class="STRPreview">

<a class="STRPreviewLink" href="{{url}}" aria-text="{{title}}" style="background-image: url('{{ feature_image }}');">
	<time class="STRPreviewDate" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM Do, YYYY"}}</time>
</a>

</div>

{{/foreach}}

</div>

{{pagination}}

<style>
.STRPreview {
	margin: 20px;

	float: left;
}

.STRPreviewLink {
	display: inline-block;
	width: 225px;
	height: 125px;
	border-radius: 10px;

	background-position: center;
	background-size: 280px;
	text-decoration: none;

	overflow: hidden;
}

.STRPreviewDate {
	display: block;
	padding: 3px;
	background: rgba(0, 0, 0, 0.5);
	color: white;
	text-shadow: 1px 1px 0 black; 
	font-size: 8pt;
	text-align: right;
	opacity: 0.7;
}
</style>
