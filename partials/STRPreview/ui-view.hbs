<div class="STRPreviewList">

{{#foreach posts}}

<div class="STRPreview">

<a class="STRPreviewLink" href="{{url}}" aria-text="{{title}}" style="background-image: url('{{ feature_image }}');">
	<time class="STRPreviewDate" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM Do, YYYY"}}</time>
</a>

</div>

{{/foreach}}

</div>

{{pagination}}

<style>
.STRPreviewList {
	display: flex;
	flex-wrap: wrap;
}

.STRPreview {
	margin: 0 20px 20px 0;
}

.STRPreviewLink {
	display: inline-block;
	width: 275px;
	height: 150px;
	border-radius: 10px;

	background-position: center;
	background-size: 300px;
	text-decoration: none;

	overflow: hidden;
}

.STRPreviewDate {
	display: block;
	padding: 3px;
	background: rgba(0, 0, 0, 0.75);
	color: white;
	text-shadow: 1px 1px 0 black; 
	font-size: 8pt;
	text-align: right;
	opacity: 0.7;
}
</style>
